<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.collins993.riddleme">

    <application
        android:allowBackup="true"
        android:icon="@drawable/question_mark_riddle_me"
        android:label="@string/app_name"
        android:roundIcon="@drawable/question_mark_riddle_me"
        android:supportsRtl="true"
        tools:replace="android:icon"
        android:theme="@style/Theme.RiddleMe">
        <activity android:name=".GameScreen"></activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>